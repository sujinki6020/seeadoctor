<?xml version="1.0" encoding="UTF-8"?>

<!-- default directory 설정 -->

<decorators defaultdir="/WEB-INF/jsp">
	<decorator name="decorator" page="template/decorator.jsp">
		<pattern>/*</pattern>
	</decorator>

<!-- 	decorators를 적용시키지 않을 url 패턴 -->
	<excludes>
		<pattern>/login/login*</pattern>
		<pattern>/temp/chat.jsp</pattern>
		<pattern>/temp/jusoPopup.do</pattern>
		<pattern>/calendar/calendarPop.do</pattern>
		<pattern>/calendar/timePop.do</pattern>
	</excludes>
</decorators>

