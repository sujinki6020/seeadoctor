<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.seeadoctor.repository.mapper.DoctorPicMapper">
	<resultMap type="doctorPic" id="docPicMap">
		<result column="pic_seq" property="picSeq"/>
		<result column="doctor_seq" property="doctorSeq"/>
		<result column="file_path" property="filePath"/>
		<result column="sys_name" property="sysName"/>
		<result column="hospital_seq" property="hospitalSeq"/>
	</resultMap>
	
	<insert id="insertDocPicFiles" parameterType="doctorPic">
			insert into tb_doctor_pic(
				file_path, sys_name, doctor_seq
			) values (
				#{filePath},#{sysName}, #{doctorSeq}
			)
	</insert>
	
	<select id="selectDocPicFile" parameterType="int">
		select *
		from tb_doctor_pic
		where doctor_seq = #{doctorSeq}
	</select>
	
	<update id="updateDocPicFile" parameterType="doctorPic">
		update tb_doctor_pic
		set file_path = #{filePath},
			sys_name = #{sysName},
		where doctor_seq = #{doctorSeq}	
	</update>
	
	<delete id="deleteDocPicFile" parameterType="int">
		delete 
		from tb_doctor_pic
		where doctor_seq = #{doctorSeq}
	</delete>
</mapper>



